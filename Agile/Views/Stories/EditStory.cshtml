@model Agile.Biz.Models.Story

@{
    ViewBag.Title = "EditStory";
}

<h2>EditStory</h2>


@using (Html.BeginForm("EditStory", "Stories", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form">
        <h4>Story</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.StoryID)

        <div class="input-field col s6">
            
            <div>
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-field col s6">
            
            <div>
                @Html.EditorFor(model => model.Hours)
                @Html.ValidationMessageFor(model => model.Hours, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @type = "text", @class = "materialize-textarea", @placeholder = "Description" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                <label for="textarea1">Description</label>
            </div>
        </div>
        
        <div class="input-field col s6">
            <div>
                <input type="submit" value="Save" class="btn waves-effect waves-light" />
                @Html.ActionLink("Back to List", "ViewStories", new { @class = "waves-effect waves-green btn-flat" })
            </div>
        </div>


    </div>
}

<div>
    
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
