@model Agile.Models.Story

@{
    ViewBag.Title = "RemoveStory";
}

<h2>RemoveStory</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Story Details</h4>
    <hr />

    @using (Html.BeginForm("RemoveStory", "Stories", FormMethod.Post)) {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col m6">
                <div class="card #eeeeee grey lighten-3 hoverable">
                    <div class="card-content blue-text">
                        <span class="card-title">@Model.Title</span>
                        <div>
                            <p>Hours Assigned: @Model.Hours<p>
                            <p>@Model.Description</p>
                        </div>
                    </div>
                    <div class="card-action #42a5f5 blue lighten-1">
                        <input type="submit" value="delete" class="btn waves-effect waves-light" />
                        @Html.ActionLink("Back to List", "ViewStories", new { @class = "waves-effect waves-green btn-flat" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
